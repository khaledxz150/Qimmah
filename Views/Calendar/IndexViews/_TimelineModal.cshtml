@model Qimmah.Models.Calendar.CalendarItemViewModel

<div class="modal fade" id="timelineModal@(Model.Id)" tabindex="-1"
     aria-labelledby="timelineModalLabel@(Model.Id)" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content border-radius-md">
            <!-- Modal Header -->
            <div class="modal-header font-color-main">
                <h5 class="modal-title fs-lg fw-semibold"
                    id="timelineModalLabel@(Model.Id)">
                    الجدول الزمني للجلسات
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>

            <!-- Modal Body with Timeline -->
            <div class="modal-body timeline-schedule p-0">
                <div class="container pt-3">
                    <div class="timeline-container" id="timelineContainer@(Model.Id)">
                        @if (Model.Timelines?.Any() == true)
                        {
                            @for (int i = 0; i < Model.Timelines.Count; i++)
                            {
                                var timeline = Model.Timelines[i];
                                var sessionNumber = i + 1;

                                <div class="row schedule-row align-items-center mb-4 position-relative"
                                     data-schedule-item="@sessionNumber">
                                    <div class="col-1 bullet-col d-flex justify-content-center align-items-center position-relative"
                                         style="z-index:2;">
                                        <div class="bullet-point bg-secondary border border-color-white rounded-circle"
                                             data-bullet="@sessionNumber" style="width: 1rem; height: 1rem;"></div>
                                    </div>
                                    <div class="col-md-11">
                                        <div class="row">
                                            <div class="col-9 content-col d-flex align-items-center"
                                                 style="padding-inline-start: 1.25rem;">
                                                <div class="session-content bg-white d-flex align-items-center p-lg w-100">
                                                    <div class="session-title fs-base fw-medium color-dark w-100">
                                                        @timeline.Description
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3 time-col d-flex align-items-center justify-content-end"
                                                 style="padding-inline-end: 1.25rem;">
                                                <div class="time-slot bg-primary color-white text-center fw-semibold fs-sm px-4 py-2">
                                                    @timeline.TimeDisplay
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إغلاق</button>
            </div>
        </div>
    </div>
</div>